<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", matches_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_match_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Matches</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th>Tournament</th>
          <th>Match</th>
          <th>Players</th>
          <th>Winner</th>
          <th>Date</th>
        </tr>

        <% @matches.each do |match| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td></td>
            <td><%= link_to match.name, match_path(match) %></td>
            <td><%= match.players.join(', ') %></td>
            <td></td>
            <td><%= match.created_at.strftime("%d-%b-%Y") %></td>
          </tr>
        <% end -%>
      </table>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
