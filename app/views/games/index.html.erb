<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <% if @user || @league %>
        <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List All")}", games_path  %></li>
      <% else %>
        <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", games_path  %></li>
      <% end %>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_game_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <% if @user %>
      <h2 class="title">Games of <%= @user.userid %></h2>
    <% elsif @league %>
      <h2 class="title">Games of <%= @league.name %></h2>
    <% else %>
      <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Games</h2>
    <% end %>
    <div class="inner">
      <table class="table">
        <tr>             
          <th><%= t("activerecord.attributes.game.league.name", :default => t("activerecord.labels.league", :default => "League")) %> </th>
          <th><%= t("activerecord.attributes.game.runner_user", :default => t("activerecord.labels.league", :default => "Runner")) %> </th>
          <th><%= t("activerecord.attributes.game.runner_score", :default => t("activerecord.labels.league", :default => "Score")) %> </th>
          <th><%= t("activerecord.attributes.game.corporation_user", :default => t("activerecord.labels.league", :default => "Corp")) %> </th>
          <th><%= t("activerecord.attributes.game.corporation_score", :default => t("activerecord.labels.league", :default => "Score")) %> </th>
          <th><%= t("activerecord.attributes.game.date", :default => t("activerecord.labels.league", :default => "Date")) %> </th>
        </tr>
        <% @games.each do |game| -%>
          <tr class="<%= cycle("odd", "even") %>" onclick="window.location.href = '<%= game_path(game) %>'">
          <td><%= game.league.name if game.league %></td>
          <td><%= link_to game.runner_user.userid, user_path(game.runner_user) %></td>
          <td><%= game.runner_score %></td>
          <td><%= link_to game.corporation_user.userid, user_path(game.corporation_user) %></td>
          <td><%= game.corporation_score %></td>
          <td><%= game.date.strftime("%d-%b-%Y") %></td>
        </tr>          
        <% end -%>
      </table>
      <p><%= paginate(@games) %></p>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
