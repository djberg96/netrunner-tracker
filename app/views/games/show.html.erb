<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", games_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_game_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", game_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.game.league_id", :default => t("activerecord.labels.league_id", :default => "League")) %>:</b>
          <%= @game.league.name if @game.league %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.game.runner_user", :default => t("activerecord.labels.runner_user", :default => "Runner Player")) %>:</b>
          <%= @game.runner_user.userid %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.game.corporation_user", :default => t("activerecord.labels.corporation_user", :default => "Corporation player")) %>:</b>
          <%= @game.corporation_user.userid %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.game.runner.faction", :default => t("activerecord.labels.runner", :default => "Runner")) %>:</b>
          <%= @game.runner.faction + ' - ' + @game.runner.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.game.corporation_id", :default => t("activerecord.labels.corporation_id", :default => "Corporation")) %>:</b>
          <%= @game.corporation.faction + ' - ' + @game.corporation.slogan %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.game.runner_score", :default => t("activerecord.labels.runner_score", :default => "Runner score")) %>:</b>
          <%= @game.runner_score %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.game.corporation_score", :default => t("activerecord.labels.corporation_score", :default => "Corporation score")) %>:</b>
          <%= @game.corporation_score %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.game.date", :default => t("activerecord.labels.date", :default => "Date")) %>:</b>
          <%= @game.date %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.game.comment", :default => t("activerecord.labels.comment", :default => "Comment")) %>:</b>
          <%= @game.comment %>
        </p>
      <div class="wat-cf">
        <% if current_user.admin? || current_user == @game.runner_user || current_user == @game.corporation_user %>
          <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_game_path(@game), :class => "button" %> 
        <% end %>
        <% if current_user.admin? %>
          <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), game_path(@game), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
        <% end %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
