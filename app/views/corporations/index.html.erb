<h1>Corporations</h1>

<table cellpadding=3 cellspacing=3>
  <tr>
    <th>Faction</th>
    <th>Slogan</th>
    <th>Identity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @corporations.each do |corporation| %>
  <tr>
    <td><%= corporation.faction %></td>
    <td><%= corporation.slogan %></td>
    <td><%= corporation.identity %></td>
    <% if current_user.admin? %>
      <td><%= link_to 'Edit', edit_corporation_path(corporation) %></td>
      <td><%= link_to 'Destroy', corporation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<p><%= link_to 'Runners', runners_path %></p>
<p><%= link_to 'Players', users_path %></p>
<p><%= link_to 'Games', games_path %></p>

<% if current_user.admin? %>
  <br />
  <%= link_to 'New Corporation', new_corporation_path %>
<% end %>
