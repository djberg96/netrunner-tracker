<h1>Players</h1>

<p><%= link_to 'Show all games', games_path %></p>

<p><%= paginate(@users) %></p>

<table>
  <tr>
    <th>Userid</th>
    <th>Email</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Wins</th>
    <th>Losses</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to(user.userid, user_path(user.id)) %></td>
    <td><%= user.email %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.total_wins %></td>
    <td><%= user.total_losses %></td>
    <td><%= link_to 'Details', user %></td>
    <td\>
    <% if current_user.admin? || current_user.userid == user.userid %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end %>
    <% if current_user.admin? %>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if current_user.admin? %>
  <%= link_to 'New Player', new_user_path %>
<% end %>
