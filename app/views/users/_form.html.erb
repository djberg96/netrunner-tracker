
  <div class="group">
    <%= f.label :userid, t("activerecord.attributes.user.userid", :default => "Userid"), :class => :label %>
    <%= f.text_field :userid, :class => 'text_field' %>
    <span class="description">Must be 2-16 characters long</span>
  </div>

  <div class="group">
    <%= f.label :email, t("activerecord.attributes.user.email", :default => "Email"), :class => :label %>
    <%= f.text_field :email, :class => 'text_field' %>
    <span class="description">Email address is used for logging in</span>
  </div>

  <div class="group">
    <%= f.label :first_name, t("activerecord.attributes.user.first_name", :default => "First name"), :class => :label %>
    <%= f.text_field :first_name, :class => 'text_field' %>
    <span class="description">Limit 32 characters</span>
  </div>

  <div class="group">
    <%= f.label :last_name, t("activerecord.attributes.user.last_name", :default => "Last name"), :class => :label %>
    <%= f.text_field :last_name, :class => 'text_field' %>
    <span class="description">Limit 32 characters</span>
  </div>

  <div class="group">
    <%= f.label :password, t("activerecord.attributes.user.password", :default => "Password"), :class => :label %>
    <%= f.password_field :password, :class => 'password_field' %>
    <span class="description">6-32 characters</span>
  </div>

  <% if current_user.admin? %>
  <div class="group">
    <%= f.label :admin, t("activerecord.attributes.user.admin", :default => "Admin"), :class => :label %>
    <%= f.check_box :admin, :class => 'check_box' %>
    <span class="description">Make user an admin?</span>
  </div>
  <% end %>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), user_path(@user.id), :class => "text_button_padding link_button" %>
</div>
