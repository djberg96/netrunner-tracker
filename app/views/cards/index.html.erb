<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", cards_path  %></li>
      <% if current_user.admin? %>
        <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_card_path %></li>
      <% end %>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Cards</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="sortable"><%= sortable "title", "Title" %></th>
          <th class="sortable"><%= sortable "faction", "Faction" %></th>
          <th class="sortable"><%= sortable "kind", "Type" %></th>
          <th class="sortable"><%= sortable "cost", "Cost" %></th>
          <th class="sortable"><%= sortable "influence", "Influence" %></th>
        </tr>
        <% @cards.each do |card| -%>
        <tr class="<%= cycle("odd", "even") %>" onclick="window.location.href = '<%= card_path(card) %>'">

          <td><%= card.title %></td>
          <td><%= card.faction %></td>
          <td><%= card.kind %></td>
          <td><%= card.cost %></td>
          <td><%= card.influence %></td>
        </tr>          
        <% end -%>
      </table>
      <p>
        <%= link_to_previous_page @cards, 'Previous' %>
        <%= link_to_next_page @cards, 'Next' %>
      </p>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
