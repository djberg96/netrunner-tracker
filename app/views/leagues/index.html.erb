<h1>Listing leagues</h1>

<p><%= link_to 'Games', games_path %></p>
<p><%= link_to 'Players', users_path %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @leagues.each do |league| %>
  <tr>
    <td><%= league.name %></td>
    <td><%= league.comments %></td>
    <td><%= link_to 'Show', league %></td>
    <% if current_user.admin? %>
      <td><%= link_to 'Edit', edit_league_path(league) %></td>
      <td><%= link_to 'Destroy', league, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
