<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", leagues_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_league_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Leagues</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th><%= t("activerecord.attributes.league.name", :default => t("activerecord.labels.name", :default => "Name")) %></th>
          <th><%= t("activerecord.attributes.league.comments", :default => t("activerecord.labels.comments", :default => "Comments")) %></th>
          <th><%= t("activerecord.attributes.league.created_at", :default => t("activerecord.labels.created_at", :default => "Created")) %></th>
          <th><%= t("activerecord.attributes.league.created_by", :default => t("activerecord.labels.created_by", :default => "Created By")) %></th>
        </tr>
        <% @leagues.each do |league| -%>
        <tr class="<%= cycle("odd", "even") %>" onclick="window.location.href='<%= league_path(league) %>'">
          <td><%= league.name %> </td>
          <td><%= league.comments %> </td>
          <td><%= league.created_at.strftime('%d-%b-%Y') %></td>
          <td><%= league.created_by.userid %></td>
        </tr>          
        <% end -%>
      </table>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
