<div class="block notice">
  <h3>Leagues</h3>
  <div class="content">
    <% case params[:action] %>
    <% when 'index' %>
      <p>A list of all leagues currently registered.</p>
      <p>You may optionally associate a game with a league.</p>
    <% when 'show' %>
      <p>League details.</p>
      <p>Only an admin can edit or delete a league.</p>
    <% when 'new' %>
      <p>Create a new League.</p>
      <p>You may create a maximum of <%= User::LEAGUES_CREATE_MAXIMUM %> leagues.</p>
    <% end %>
  </div>
</div>
<div class="block">
  <h3>Links</h3>
  <ul class="navigation">
    <li><%= link_to 'Games', games_path %></li>
    <li><%= link_to 'Players', users_path %></li>
    <% if params[:action] == 'show' %>
      <li><%= link_to "Games of #{@league.name}", league_games_path(@league) %></li>
      <li><%= link_to "Players of #{@league.name}", league_users_path(@league) %></li>
    <% end %>
  </ul>
</div>
