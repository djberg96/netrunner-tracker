
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.tournament.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :num_players, t("activerecord.attributes.tournament.num_players", :default => "Number of Players"), :class => :label %>
    <%= f.number_field :num_players, :class => 'number_field' %>
    <span class="description">Optional. You can set this later.</span>
  </div>

  <div class="group">
    <%= f.label :num_rounds, t("activerecord.attributes.tournament.num_rounds", :default => "Number of Rounds"), :class => :label %>
    <%= f.select :num_rounds, 1..8, :class => 'number_field' %>
  </div>

  <div class="group">
    <%= f.label :winner, t("activerecord.attributes.tournament.winner", :default => "Winner"), :class => :label %>
    <%= f.collection_select :winner, @users, :id, :userid, :include_blank => true %>
    <span class="description">Optional. You can set this later.</span>
  </div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), tournaments_path, :class => "text_button_padding link_button" %>
</div>
