<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", runners_path  %></li>
      <% if current_user.admin? %>
        <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_runner_path %></li>
      <% end %>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Runners</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">Faction</th>
          <th>Identity</th>
          <th>Name</th>
          <th>Min. Cards</th>
          <th>Max. Influence</th>
        </tr>
        <% @runners.each do |runner| -%>
        <tr class="<%= cycle("odd", "even") %>" onclick="window.location.href = '<%= runner_path(runner) %>'">
          <td> <%= runner.faction %> </td>
          <td> <%= runner.identity %> </td>
          <td> <%= runner.name %> </td>
          <td> <%= runner.min_cards %> </td>
          <td> <%= runner.max_influence %> </td>
        </tr>          
        <% end -%>
      </table>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
